<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        var notificationCart = $('#CartCount'); // Seleciona o ícone de notificação
        var notificationFav = $('#FavCount'); // Seleciona o ícone de notificação

        $('.fav-button').click(function () {
            var userId = $(this).data('user-id');
            var productId = $(this).data('product-id');
            var heartImage = $(this).find('.fav-icon');

            $.ajax({
                url: '/Home/AddOrRemoveFavorite',  // Certifique-se de ajustar a URL corretamente
                type: 'POST',
                data: {
                    userId: userId,
                    productId: productId
                },
                success: function (result) {
                    // Atualize a exibição da imagem do coração com base na resposta do servidor
                    if (result.isFavorite) {
                        // Produto é favorito, atualize a imagem para coração cheio
                        heartImage.attr('src', 'images/icons/icon-heart-02.png');
                    } else {
                        // Produto não é favorito, atualize a imagem para coração vazio
                        heartImage.attr('src', 'images/icons/icon-heart-01.png');
                    }

                    // Atualize o valor do data-notify com a contagem de favoritos atualizada
                    $.ajax({
                        url: '/Home/getFavCount',  // Rota para obter a contagem atualizada de favoritos
                        type: 'POST',
                        data: {
                            userId: userId
                        },
                        success: function (countResult) {
                            notificationFav.attr('data-notify', countResult); // Atualiza o valor do data-notify
                        }
                    });
                }
            });
        });

        $('.add-to-cart').click(function () {
            var userId = $(this).data('user-id');
            var productId = $(this).data('product-id');
            var quantidade = $(this).data('quantidade-qt');

            $.ajax({
                url: '/Home/AddToCart',
                type: 'POST',
                data: {
                    userId: userId,
                    productId: productId,
                    quantidade: quantidade
                },
                success: function (result) {
                    if (result.success) {
                        console.log('Item added to cart successfully.');
                        $.ajax({
                            url: '/Home/CountCart',
                            type: 'POST',
                            data: {
                                userId: userId
                            },
                            success: function (count) {
                                console.log('Cart count:', count);
                                notificationCart.attr('data-notify', count);
                            }
                        });
                    } else {
                        console.log('Failed to add item to cart.');
                    }
                }
            });
        });

    });
</script>
