        <div class="row isotope-grid">
            @if (Model != null)
            {
                int cont = 0;
                @foreach (var product in Model)
                {
                    if (cont == 4)
                    {
                        break;
                    }
                    @foreach (var categories in DBLayer.GetAllCategories())
                    {
                        if (categories.CategoryID == product.CategoryID)
                        {
                            <div id="@product.ProductId" class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item @categories.CategoryName.ToLower()">
                                <!-- Block2 -->
                                <div class="block2">
                                    <div class="block2-pic hov-img0">
                                        <img src=@product.ImgUrl alt="IMG-PRODUCT">
                                        @if (!string.IsNullOrEmpty(logado))
                                        {
                                            <a style="cursor: pointer" data-user-id="@userID" data-product-id="@product.ProductId" data-quantidade-qt="1" class="add-to-cart block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                                Add to Cart
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Login" asp-action="Index" data-quantidade-qt="1" class=" block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
